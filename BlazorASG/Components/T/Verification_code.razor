@using MudBlazor
@inject NavigationManager Navigation
<MudDialog>
    <DialogActions>
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h5" Align="Align.Center">Verification Code</MudText>
            </MudCardHeader>
            <MudCardContent>
                 
                <MudTextField Label="Verification  code" @bind-Value="VerificationCode" Required="true" Placeholder="Verification Code" />  
            </MudCardContent>
            <MudCardActions Class="justify-end">
                <MudButton OnClick="SubmitLogin" Variant="Variant.Filled" Color="Color.Primary">Enter</MudButton>
                <MudButton OnClick="CloseDialog" Variant="Variant.Text" Color="Color.Secondary">Close</MudButton>
            </MudCardActions>
        </MudCard>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private string PhoneNumber { get; set; } = "000000000";
    private string VerificationCode { get; set; }

    private void CloseDialog()
    {
        MudDialog.Cancel();

    }

    private async Task SubmitLogin()
    {
       
    
        MudDialog.Close(DialogResult.Ok(true));
    }
}
